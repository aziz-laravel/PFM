<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp">

    <!-- En-tÃªte avec image et titre -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="57dp"
            android:layout_height="44dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="cursive"
            android:gravity="center"
            android:text="    Add Appointment"
            android:textAppearance="@style/GreenBoldText"
            android:textSize="35sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Veterinarian ID -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Veterinarian ID"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginBottom="4dp" />

    <EditText
        android:id="@+id/vetIdInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Veterinarian ID"
        android:inputType="text"
        android:padding="12dp"
        android:layout_marginBottom="16dp" />

    <!-- Date and Time -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date and Time"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginBottom="4dp" />

    <EditText
        android:id="@+id/dateTimeInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Date and Time"
        android:inputType="datetime"
        android:padding="12dp"
        android:layout_marginBottom="16dp" />

    <!-- Reason -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reason"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginBottom="4dp" />

    <EditText
        android:id="@+id/reasonInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Reason"
        android:inputType="text"
        android:padding="12dp"
        android:layout_marginBottom="16dp" />

    <!-- Notes -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notes"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginBottom="4dp" />

    <EditText
        android:id="@+id/notesInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Add Notes"
        android:inputType="textMultiLine"
        android:minLines="2"
        android:padding="12dp"
        android:layout_marginBottom="16dp" />

    <!-- Save Button -->
    <Button
        android:id="@+id/saveAppointmentButton"
        android:layout_width="318dp"
        android:layout_height="48dp"
        android:layout_marginLeft="10dp"
        android:backgroundTint="@color/dark_green"
        android:padding="12dp"
        android:text="Save Appointment" />
</LinearLayout>
