<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditVaccinationActivity">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Vaccination"
        android:textSize="24sp"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@id/etVaccinationName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="16dp"/>

    <EditText
        android:id="@+id/etVaccinationName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Vaccination Name"
        android:textColor="#000000"
        android:padding="12dp"
        app:layout_constraintBottom_toTopOf="@id/etDateAdministered"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"/>

    <EditText
        android:id="@+id/etDateAdministered"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Date Administered"
        android:textColor="#000000"
        android:padding="12dp"
        app:layout_constraintBottom_toTopOf="@id/etNextDueDate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/etNextDueDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Next Due Date"
        android:textColor="#000000"
        android:padding="12dp"
        app:layout_constraintBottom_toTopOf="@id/etVeterinarian"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/etVeterinarian"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Veterinarian"
        android:textColor="#000000"
        android:padding="12dp"
        app:layout_constraintBottom_toTopOf="@id/etNotes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/etNotes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Notes"
        android:textColor="#000000"
        android:padding="12dp"
        app:layout_constraintBottom_toTopOf="@id/btnSaveVaccination"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/etDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Description"
        android:textColor="#000000"
        android:padding="12dp"
        app:layout_constraintBottom_toTopOf="@id/btnSaveVaccination"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btnSaveVaccination"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Save Vaccination"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
