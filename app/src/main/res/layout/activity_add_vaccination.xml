<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="57dp"
            android:layout_height="44dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="cursive"
            android:gravity="center"
            android:text="    Add vaccination"
            android:textAppearance="@style/GreenBoldText"
            android:textSize="35sp"
            android:textStyle="bold" />
    </LinearLayout>
    <!-- Back Button -->


    <!-- Title -->


    <!-- Vaccination Name -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginBottom="4dp"/>

    <EditText
        android:id="@+id/etVaccinationName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter name"
        android:inputType="text"
        android:padding="12dp"
        android:layout_marginBottom="16dp"/>

    <!-- Date Administered -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Administrated date"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginBottom="4dp"/>

    <EditText
        android:id="@+id/etDateAdministered"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="JJ/MM/AAAA"
        android:inputType="date"
        android:padding="12dp"
        android:layout_marginBottom="16dp"/>

    <!-- Next Due Date -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next due date"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginBottom="4dp"/>

    <EditText
        android:id="@+id/etNextDueDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="JJ/MM/AAAA"
        android:inputType="date"
        android:padding="12dp"
        android:layout_marginBottom="16dp"/>

    <!-- Veterinarian -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vet"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginBottom="4dp"/>

    <EditText
        android:id="@+id/etVeterinarian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter vet name"
        android:padding="12dp"
        android:layout_marginBottom="16dp"/>

    <!-- Notes -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notes"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginBottom="4dp"/>

    <EditText
        android:id="@+id/etNotes"
        android:layout_width="367dp"
        android:layout_height="58dp"
        android:layout_marginBottom="10dp"
        android:hint="Add notes"
        android:inputType="textMultiLine"
        android:minLines="2"
        android:padding="12dp" />

    <!-- Description -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginBottom="4dp"/>

    <EditText
        android:id="@+id/etDescription"
        android:layout_width="379dp"
        android:layout_height="48dp"
        android:hint="Add description"
        android:inputType="textMultiLine"
        android:minLines="2" />

    <Spinner
        android:id="@+id/spinnerSelectPet"
        android:layout_width="379dp"
        android:layout_height="56dp"
        android:visibility="gone" />

    <!-- Save Button -->
    <Button
        android:id="@+id/btnSaveVaccination"
        android:layout_width="318dp"
        android:layout_height="48dp"
        android:backgroundTint="@color/dark_green"
        android:padding="12dp"
        android:text="Save" />

</LinearLayout>