<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="57dp"
            android:layout_height="44dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="20dp"
            android:text="   Modify pet's infos"
            android:fontFamily="cursive"
            android:textAppearance="@style/GreenBoldText"
            android:textSize="35sp"
            android:textStyle="bold" />
    </LinearLayout>





    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pet's name"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginBottom="4dp" />

    <EditText
        android:id="@+id/petNameEditText"
        android:layout_width="380dp"
        android:layout_height="60dp"
        android:layout_marginBottom="16dp"
        android:hint="Enter pet new pet name"
        android:textSize="18sp" />

    <!-- Species Field -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Speicy"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginBottom="4dp" />

    <EditText
        android:id="@+id/petSpeciesEditText"
        android:layout_width="378dp"
        android:layout_height="54dp"
        android:layout_marginBottom="16dp"
        android:hint="Enter speicy"
        android:textSize="18sp" />

    <!-- Breed Field -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Breed"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginBottom="4dp" />

    <EditText
        android:id="@+id/petBreedEditText"
        android:layout_width="376dp"
        android:layout_height="51dp"
        android:layout_marginBottom="16dp"
        android:hint="Enter breed"
        android:textSize="18sp" />


    <!-- Color Field -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Color"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginBottom="4dp" />

    <EditText
        android:id="@+id/petColorEditText"
        android:layout_width="374dp"
        android:layout_height="61dp"
        android:layout_marginBottom="24dp"
        android:hint="Enter color"
        android:textSize="18sp" />


    <!-- Description Field -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginBottom="4dp" />

    <EditText
        android:id="@+id/petDescriptionEditText"
        android:layout_width="378dp"
        android:layout_height="66dp"
        android:layout_marginBottom="16dp"
        android:hint="Enter a description"
        android:inputType="textMultiLine"
        android:minLines="3"
        android:textSize="18sp" />


    <!-- Save Button -->
    <Button
        android:id="@+id/saveButton"
        android:layout_width="334dp"
        android:layout_height="53dp"
        android:layout_marginTop="3dp"
        android:backgroundTint="@color/dark_green"
        android:gravity="center"
        android:layout_marginLeft="3dp"
        android:text="Save changes"
        android:textSize="18sp" />

</LinearLayout>