<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/vaccinationName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vaccination Name"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/vaccinationDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date Administered: dd/MM/yyyy"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/vaccinationNextDueDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Next Due Date: dd/MM/yyyy"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/vaccinationDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textSize="14sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:paddingTop="8dp">

        <Button
            android:id="@+id/btnEditVaccination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit" />

        <Button
            android:id="@+id/btnDeleteVaccination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:layout_marginStart="8dp"/>
    </LinearLayout>
</LinearLayout>
